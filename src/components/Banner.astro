---
interface Props {
  showButton: boolean;
}

const { showButton } = Astro.props;
---

<div class="w-full h-full bg-gray-900">
  <div
    class="h-full w-full mx-auto relative top-12 pb-20 xl:px-16 px-8 flex md:flex-row flex-col gap-4 justify-center items-center pt-4"
  >
    <div class="w-full relative">
      <img
        class="relative z-10 rounded-full w-64 h-64 sm:w-80 sm:h-80 mx-auto"
        src="/images/mia.jpg"
        alt="My Image"
      />
    </div>
    <div
      class="w-full flex flex-col justify-center gap-4 md:text-left text-center text-white"
    >
      <h1 class="md:text-4xl sm:text-3xl text-2xl font-semibold font-serif">
        Hello, My name is Matias San Roman
      </h1>
      <h2 class="capitalize">I'm a Backend Developer</h2>
      <p>
        Experienced full-stack developer with 4+ years of expertise in Laravel,
        NestJS, Nuxt.js, Next.js, Android, and some Flutter experience.
      </p>
      <div class="flex justify-center md:justify-start gap-8 mt-4">
        <!-- About Me Button -->
        {showButton ? (
          <a
            href="/about"
            class="flex flex-col items-center text-center text-white hover:text-gray-300"
          >
            <img
              src="/images/about_me.svg"
              alt="About Me Icon"
              class="w-10 h-10 mr-2"
            />
            <span class="mt-1 text-sm">Sobre Mi</span>
          </a>
        ) : null}

        <!-- GitHub Icon -->
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center text-center text-white hover:text-gray-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-10 h-10"
            fill="#1D4ED8"
            viewBox="0 0 80 80"
          >
            <path
              d="M76.999,40.001c0,17.44-12.02,31.86-27.97,35.89c-2.9,0.72-5.92,1.11-9.03,1.11c-3.08,0-6.09-0.38-8.97-1.1c-15.98-4-28.03-18.44-28.03-35.9c0-20.6,16.4-37,37-37C60.599,3.001,76.999,19.401,76.999,40.001z"
            ></path>
            <circle cx="39.999" cy="40.001" r="37" fill="none" stroke="#1D4ED8"></circle>
            <path
              fill="#fff"
              d="M64.029,38.521c0,4.49-2.32,10.73-6.13,13.83c-3.08,2.51-7.15,3.3-11.75,3.55c1.73,1.05,2.88,2.95,2.88,5.12v14.87c-2.9,0.72-5.92,1.11-9.03,1.11c-3.08,0-6.09-0.38-8.97-1.1v-9.77c-1.25,0.39-2.89,0.62-5,0.51c-7-0.37-8-4.62-9.12-7.62c-1.13-3-4.63-3.38-4.13-4.62c2.416-0.829,4.314-0.039,5.597,0.938c1.018,0.776,1.728,1.871,2.203,3.06c0.543,1.358,1.986,3.622,5.57,3.622c2.53,0,4.03-0.59,4.89-1.17c0.05-2.12,1.21-3.96,2.91-4.97c-4.88-0.31-9.16-1.23-12.31-3.97c-3.5-3.04-5.61-9.11-5.61-13.39c0-3.57,1.47-7.97,3.99-10.74c0.08-0.08,0.15-0.17,0.25-0.25c-0.58-1.74-1.25-5.18,0.38-9.39c4.85-0.09,8.68,2.56,10.24,3.84c2.82-0.65,5.9-0.96,9.14-0.96c3.32,0,6.49,0.29,9.36,0.96c1.56-1.28,5.4-3.93,10.24-3.83c1.7,4.38,0.91,7.93,0.32,9.59C62.529,30.711,64.029,34.921,64.029,38.521z"
