---
import BaseHead from "@/components/BaseHead.astro";
import NavBar from "@/components/NavBar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <BaseHead title={title} />
  <body class="bg-gray-200">
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
